<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BottomFloatingButton">
        <!--
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        app:backgroundTint="@color/colorPrimary"
        -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:clickable">true</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="BottomAddButton" parent="@style/BottomFloatingButton">
        <item name="android:src">@drawable/add_icon_foreground</item>
        <item name="maxImageSize">60dp</item>
    </style>

    <style name="BottomDeleteButton" parent="@style/BottomFloatingButton">
        <item name="android:src">@drawable/ic_delete</item>
        <item name="maxImageSize">26dp</item>
    </style>

    <style name="PlannerText" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/mukta</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PlannerTextLarge" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/mukta</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PlannerSubText" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/mukta</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/faded_grey</item>
    </style>

    <style name="PlannerTitleText" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/mukta</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
